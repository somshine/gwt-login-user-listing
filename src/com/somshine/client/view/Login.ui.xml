<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:gwt="urn:import:com.google.gwt.user.client.ui"
	xmlns:res = 'urn:with:com.tutorialspoint.client.LoginResources'>
	
	<ui:style>
	</ui:style>
	
	<gwt:HTMLPanel>
		<div align = "center">
			<div class="col-md-5 mx-auto">
	         	<div class="form-group">
	            	<gwt:Label text = "Login" res:styleName = "style.blackText" />
		            <gwt:TextBox ui:field="loginBox" res:styleName="style.box form-control" />
	            </div>
	            <div class="form-group">
		            <gwt:Label text = "Password" res:styleName = "style.blackText" />
		            <gwt:PasswordTextBox ui:field = "passwordBox" res:styleName="style.box form-control" />
	            </div>
	            
	            <gwt:HorizontalPanel verticalAlignment = "middle">
	               <gwt:Button ui:field = "buttonSubmit" text="Submit" res:styleName = "style.loginButton" />
	               <gwt:CheckBox ui:field = "myCheckBox" />
	               <gwt:Label ui:field = "myLabel" text = "Remember me" res:styleName = "style.blackText" />
	            </gwt:HorizontalPanel>
	            
	            <div class="">
	            	<div>&nbsp;</div>
		            <gwt:Label ui:field = "userNameError" res:styleName = "style.blackText alert alert-danger" />
		            <gwt:Label ui:field = "passwordError" res:styleName = "style.blackText alert alert-danger" />
	            </div>
            </div>
         
      </div>
	</gwt:HTMLPanel>
</ui:UiBinder> 